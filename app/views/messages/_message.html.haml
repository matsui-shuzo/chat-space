.message{data: {message: {id: "#{message.id}"}}}
  .message__upper-message
    .message__upper-message__user-name
      = message.user.name
    .message__upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
    .message__upper-message__edit
      = link_to '編集', edit_group_message_path(@group.id,message.id)
      = "/"
      = link_to '削除', group_message_path(@group.id,message.id), method: :delete, data: { confirm: "日報を削除しますか？" }
  .message__lower-message
    - if message.content.present?
      %p.lower-message__content
        = safe_join(message.content.split("\n"), tag(:br))
    -# = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
